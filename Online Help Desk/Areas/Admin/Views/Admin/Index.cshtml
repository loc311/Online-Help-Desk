

@{
    ViewData["Title"] = "Admin Dashboard";
}


<div class="row" style="padding-top:10%">

    <div class="col-sm-3">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@ViewBag.account</h3>

                <p>Account</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-tag"></i>
            </div>
            <a href="/Admin/Account/Index" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

    <div class="col-sm-3">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@ViewBag.Facility</h3>

                <p>Facility</p>
            </div>
            <div class="icon">
                <i class="fas fa-home"></i>

      

            </div>
            <a href="/Admin/Facility/FacilityList" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

    <div class="col-sm-3">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@ViewBag.Request</h3>

                <p>Request</p>
            </div>
            <div class="icon">
                <i class="fas fa-flag"></i>
            </div>
            <a href="/Admin/Request/Index1" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

    <div class="col-sm-3">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@ViewBag.rs</h3>

                <p>Request Sample</p>
            </div>
            <div class="icon">
                <i class="far fa-flag"></i>
               
            </div>
            <a href="/Admin/RequestSample/RequestSampleList" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>

    </div>

</div>