@model OnlineHelpDesk.Areas.Admin.Models.Facility

@{
    ViewData["Title"] = "Edit Status";
}

<h1>Edit Status</h1>

<h4>Facility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStatus" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FacilityId" />
            <div class="form-group">
                <label asp-for="FacilityName" class="control-label"></label>
                <input asp-for="FacilityName" class="form-control" />
                <span asp-validation-for="FacilityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <img src="~/@Url.Content(Model.Image)" width="120" />
                <input name="file" class="form-control" type="file" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input  asp-for="Description"class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group ">

                <label asp-for="Status" class="control-label"> Rental Status</label>
                @*<input  asp-for="RentalStatus" />*@

                <input asp-for="RentalStatus" />

            </div>


            <div class="form-group">
                <label asp-for="Status" class="control-label"> Room Status</label>
                
                @if (Model.Status == 1)
                {


                    <input type="checkbox" checked name="Status" value="true" />
                }
                else
                {
                    <input type="checkbox" name="Status" value="true" />

                }



            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RoomManager">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
