
<link rel="stylesheet" href="~/template/css/jquery.mCustomScrollbar.min.css">






@model OnlineHelpDesk.Areas.Admin.Models.Facility
@using Newtonsoft.Json;
@using System.Net.Http;
@using System.Net.Http.Json;
@{
    ViewData["Title"] = "Room Manager";



}
<link href="~/css/about.css" rel="stylesheet" />
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse" style="margin-bottom:3%">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">@Model.FacilityName</h3>

                    <p> @Model.Description </p>
                    <br />
                    <p>

                        @if (@Model.Status == 1)
                        {
                            <i class="fas fa-circle" style="color:green"></i> <span>Active</span>
                        }
                        else if (@Model.Status == 0)
                        {
                            <i class="fas fa-circle" style="color:red"></i> <span>Not Active</span>
                        }

                        







                    </p>


                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">

                    @if (Model.Image == null)
                    {


                        <img src="~/image/ImageSystem/roomdefualt.png" width="300px" />


                    }
                    else
                    {
                        <img src="~/@Url.Content(@Model.Image)" width="300px" />
                    }


                </div>
            </div>
        </div>



        <div class="counter">
            <div class="row">
                <div class="col">

                    <div class="count-data text-center">

                        <p class="m-0px font-w-600">Change Information</p>
                        <br />
                        <a href="/HeadFacility/EditStatus?id=@Model.FacilityId">
                            <button class="btn btn-outline-info">Change Information</button>
                        </a>


                    </div>
                </div>

                <div class="col">

                    <div class="count-data text-center">

                        <p class="m-0px font-w-600">Sample List</p>
                        <br />
                        <a href="/home/samplelist">
                            <button class="btn btn-outline-info">Sample List</button>


                        </a>


                    </div>
                </div>

                @if (Model.RentalStatus)
                {
                    <div class="col">
                        <div class="count-data text-center">
                            <p class="m-0px font-w-600">Rental List</p>
                            <br />
                            <a href="#">
                                <button class="btn btn-outline-success">Rental List</button>
                            </a>
                        </div>
                    </div>
                }

                <div class="col">
                    <div class="count-data text-center">
                        <p class="m-0px font-w-600">Report List</p>
                        <br />
                        <a href="#">
                            <button class="btn btn-outline-success">Report List</button>
                        </a>
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>





