@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutHomepage";
}
@using Microsoft.AspNetCore.Identity
@using OnlineHelpDesk.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Http;


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">

    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/template/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/template/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/template/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/template/images/fevicon.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/template/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="~/template/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col logo_section">
                        <div class="full">
                            <div class="center-desk">
                                <div class="logo">
                                    <a href="index.html"><img src="~/template/images/logo.png" alt="#" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9">
                        <nav class="navigation navbar navbar-expand-md navbar-dark ">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarsExample04">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">Home</a>
                                    </li>



                                    @if (@UserManager.GetUserAsync(User).Result?.FullName == null)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" href="#Services"> Services</a>
                                        </li>
                                  
                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/login">Login</a>
                                        </li>
                                    }
                                    else
                                    {

                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/UserProfile">Hello @UserManager.GetUserAsync(User).Result?.FullName !</a>
                                        </li>

                                        @if (Context.Session.GetString("Role") == "4")

                                        {
                                            <li class="nav-item ">
                                                <a class="nav-link" href="">Room Manager</a>
                                            </li>
                                        }

                                        @if (Context.Session.GetString("Role") == "3")

                                        {
                                            <li class="nav-item ">
                                                <a class="nav-link" href="">Report Manager</a>
                                            </li>
                                        }

                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/Roomlist">Room List</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/home/logout">Logout</a>
                                        </li>


                                    }






                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- end header inner -->
    <!-- end header -->
    <!-- banner -->
    <section class="banner_main">
        <div class="container">
            <div class="row d_flex">
                <div class="col-md-5">
                    <div class="text-bg">
                        <h1>This is a student support website</h1>

                        <p>
                            This is a place to answer students' questions about all learning problems, as well as a place to report problems
                            about lecturers, furniture, ... Is a place for students to borrow a certain
                            room in school
                        </p>
                        <a href="/home/roomlist">Get Started</a>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="text-img">
                        <figure><img src="~/template/images/img.png" /></figure>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end banner -->
    <!-- why -->
    <div id="Services" class="why">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Services </h2>
                        <p>Here are a few services that you can use at Online Help Desk</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12"></div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                    <div id="box_ho" class="why-box">
                        <i><img src="~/template/images/why1.png" alt="#" /></i>
                        <h3>Room for rent</h3>
                        <p>Here we have some available rooms that can be loaned to you. If you need it, please click below </p>
                    </div>
                    <a class="read_more bg" href="/home/roomlist">Choose</a>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                    <div class="why-box">
                        <i><img src="~/template/images/why2.png" alt="#" /></i>
                        <h3>Damage report</h3>
                        <p>This is the place where you can report any incidents or damage to facilities</p>
                    </div>
                    <a class="read_more bg" href="/home/roomlist">Choose</a>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-12"></div>
            </div>
        </div>
    </div>
    <!-- end why -->
    <br />
    <br />
    <br />

    <!--  footer -->
    <footer>
        <div class="footer">


            <div class="border-top footer text-muted">
                <div class="text-center p-3" style="background-color: #0c0f38;">


                    <label style="color:white">
                        © 2022 Copyright:
                        <a class="text-white" style="color:white" href="https://mdbootstrap.com/">Online Help Desk</a>
                    </label>
                </div>
            </div>
        </div>

    </footer>
    <!-- end footer -->
    <!-- Javascript files-->
    <script src="~/template/js/jquery.min.js"></script>
    <script src="~/template/js/popper.min.js"></script>
    <script src="~/template/js/bootstrap.bundle.min.js"></script>
    <script src="~/template/js/jquery-3.0.0.min.js"></script>
    <script src="~/template/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/template/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/template/js/custom.js"></script>
    <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
</body>
</html>

