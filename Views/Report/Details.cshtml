@model OnlineHelpDesk.Models.Request

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityId)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.facilities)
            {
                if (item.FacilityId == Model.FacilityId)
                {
                    <p>@item.FacilityName</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestSampleId)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in ViewBag.requestSamples)
            {
                if (item.RequestSampleId == Model.RequestSampleId)
                {
                    <p>@item.Content</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == "Report")
            {


                <p class="text-danger">Waiting for approval</p>
            }
            else
            {
                <p class="text-primary">@Model.Status</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remark)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Remark)
        </dd>



        @if (Model.Status == "Report")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Feedback)
            </dt>
            if (Model.Feedback == null)
            {
                <dd class="col-sm-10 text-danger">
                    No response yet
                </dd>
            }
        }
        else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Feedback)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Feedback)
            </dd>
        }



    </dl>
</div>
<div>
    <a asp-action="Index" asp-controller="Request">Back to List</a>
</div>
